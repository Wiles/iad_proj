#include <msp430g2231.h> 

#define LED0 0x01
#define LED1 0x04
#define BUTTON BIT3

int main(void)
{
	WDTCTL = WDTPW + WDTHOLD; // Stop watchdog timer
	P1DIR |= (LED0); // Set P1.0 to output direction 
	// P1.3 must stay at input
	
	for(;;)
	{
		volatile unsigned int i;
		
		P1OUT ^= 0x01;
		
		i = 50000;
		do(i--)
		while( i != 0 )
		
	}
}
